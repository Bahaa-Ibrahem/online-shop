<%- include('parts/head') %>
<%- include('parts/nav') %>
        <div class="container" style="margin-top: 30px;">
            <% if(!product){ %>
                <div class="alert alert-danger">
                    There is no product match this id
                </div>
            <% }else{ %>

                <% if(validationErrors) { %>
                <p class="alert alert-danger">
                    <%= validationErrors.msg %>
                </p>
                <% } %>

                    <div class="row">
                        <div class="col col-12 col-md-6">
                            <img src="/<%= product.image %>" style="height: 350px;width: 450px;">
                            <form action="/cart" method="POST" style="margin-top: 20px;"> 
                                <input type="number" name="amount" class="form-control">
                                <input type="hidden" name="name" value="<%= product.name %>">
                                <input type="hidden" name="price" value="<%= product.price %>">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <input type="hidden" name="redirectTo" value="/product/<%= product._id %>">
                                <input type="submit" value="Add to cart" class="btn btn-primary" style="margin: 20px auto;display: flex;;justify-content: center;padding: 5px 20px;;">
                            </form>
                        </div>
                        <div class="col col-12 col-md-6">
                            <h3>Name : <%= product.name %></h3>
                            <h5>Price : <%= product.price %></h5>
                            <p>Description : <%= product.description %></p>
                        </div>
                    </div>
                    <% } %>
        </div>
<%- include('parts/footer') %>