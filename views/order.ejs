<%- include('parts/head') %>
<%- include('parts/nav') %>
<div class="container">
    <div class="row">
        <div class="col col-sm-12 table-responsive">
            <br><br>
            <% if(orders.length === 0){ %>
                <p class="alert danger">
                    There is no orders
                </p>
            <% } else { %>
        
            <% if(validationErrors){ %>
                <p class="alert alert-danger">
                    <%= validationErrors.msg %>
                </p>
            <% } %>
        
                <table  class="table table-bordered">
                    <thead class="text-center pl-10">
                        <td>no</td> 
                        <td>name</td>
                        <td>price</td>
                        <td>amount</td>
                        <td>Cost</td>
                        <td>address</td>
                        <td>Status</td>
                        <td>Cancle</td>
                    </thead>
                    <tbody class="text-center pl-10">
                        <% for(let i = 0 ; i < orders.length ; i++){ %>
                            <tr>
                                <td> <%= i+1 %> </td>
                                <td> <%= orders[i].name %></td>
                                <td> <%= orders[i].price %> $ </td>
                                <td> <%= orders[i].amount %> </td> 
                                <td> <%= orders[i].price * orders[i].amount %> $ </td>
                                <td> <%= orders[i].address %> </td> 
                                <td> <%= orders[i].status %> </td> 
                                <td> <a href="/order/delete/<%= orders[i]._id %>"> <button class="btn btn-danger">Cancle</button> </a> </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                <td> <a href="/order/deleteAll"> <button class="btn btn-danger" style="float: right;">Cancle All</button> </a> </td>
            <% } %>
        </div>
    </div>    
</div>

<%- include('parts/footer') %>